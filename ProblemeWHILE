import java.util.Scanner;
public class ProblemeWHILE {
public static void main(String[] args) {
	double n;
	Scanner Sc=new Scanner(System.in);
	n=Sc.nextDoube();
	int j=1;
	int s=0;
	while (j<=n) {
		s=s+(2*j-1);
		j++;
	}
	System.out.println(s);
}
}


